@model IEnumerable<AgenciaViagemUp.Models.DestinoModel>

@{
    ViewData["Title"] = "Index Destino";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a asp-action="Create">Novo Destino</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @* @Html.DisplayNameFor(model => model.Pais) *@
